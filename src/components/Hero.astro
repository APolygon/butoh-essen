---
export interface Props {
  title: string;
  subtitle: string;
  imageSrc?: string;
  imageAlt?: string;
}

const { title, subtitle, imageSrc, imageAlt = "Hero Image" } = Astro.props;
---

<div class="hero-container">
  {imageSrc ? (
    <img src={imageSrc} alt={imageAlt} class="hero-image" />
  ) : (
    <div class="hero-image">
      Hero Image
    </div>
  )}
  <div class="hero-overlay">
    <h1>{title}</h1>
    <p>{subtitle}</p>
  </div>
</div>

<style>
  .hero-container {
    position: relative;
    width: 100vw;
    height: 30vh;
    margin-left: calc(-50vw + 50%);
  }
  
  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background: linear-gradient(45deg, #667eea, #764ba2);
    border-radius: 0;
  }
  
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    background: rgba(0, 0, 0, 0.4);
    color: white;
    padding: 2rem;
  }
  
  .hero-overlay h1 {
    font-size: 3rem;
    margin: 0 0 1rem 0;
    font-weight: 300;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
  }
  
  .hero-overlay p {
    font-size: 1.2rem;
    opacity: 0.9;
    margin: 0;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
  }
  
  @media (max-width: 768px) {
    .hero-overlay h1 {
      font-size: 2rem;
    }
    
    .hero-overlay p {
      font-size: 1rem;
    }
  }
</style> 