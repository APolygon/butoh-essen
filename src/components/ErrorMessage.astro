---
export interface Props {
  title: string;
  message: string;
}

const { title, message } = Astro.props;
---

<div class="error-message">
  <h2>{title}</h2>
  <p>{message}</p>
</div>

<style>
  .error-message {
    text-align: center;
    padding: 3rem;
    background: rgba(255, 0, 0, 0.1);
    border-radius: 8px;
    border: 1px solid rgba(255, 0, 0, 0.3);
  }
  
  .error-message h2 {
    color: #ff6b6b;
    margin-bottom: 1rem;
  }
  
  .error-message p {
    color: #e2e8f0;
    margin: 0;
  }
</style> 