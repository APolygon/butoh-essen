<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Decap CMS</title>
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="stylesheet" href="/admin/preview.css" />
    <script>
      (function () {
        var isLocal = location.hostname === 'localhost' || location.hostname === '127.0.0.1';
        if (isLocal && !location.search.includes('local_backend=true')) {
          var url = new URL(location.href);
          url.searchParams.set('local_backend', 'true');
          location.replace(url.toString());
        }
      })();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/decap-cms@3/dist/decap-cms.js"></script>
  </head>
  <body>
    <div id="nc-root"></div>
    <script>
      if (window.CMS) {
        const HeroPreview = ({ entry }) => {
          const title =
            entry.getIn(["data", "hero", "title"]) ||
            entry.getIn(["data", "title"]) ||
            "";
          const subtitle = entry.getIn(["data", "hero", "subtitle"]) || "";
          return h(
            "div",
            { className: "cms-preview" },
            h(
              "div",
              { className: "hero" },
              h("h1", { dangerouslySetInnerHTML: { __html: title } }),
              h("p", {}, subtitle)
            )
          );
        };
        CMS.registerPreviewTemplate("pages", HeroPreview);
      }
    </script>
  </body>
  </html>


